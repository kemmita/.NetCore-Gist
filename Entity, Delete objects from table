//in order to cascade delete we must disable it, so go to CourseConfiguration.cs, make sure this i set to false
.WillCascadeOnDelete(false);

//back in the main class/ our example controller
static void Main(string[] args)
        {
            var context = new PlutoContext();
            //use find method to grab the specific object from the database, find takes the value of the tables
            //primary key
            var deletecourse = context.Courses.Find(10);
            //use the remove keyword to delete object
            context.Courses.Remove(deletecourse);
            //save changes
            context.SaveChanges();
            Console.ReadKey();
        }

 
